<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeLight">

    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/lightGrey</item>
        <item name="colorItemBackground">@color/white</item>

        <item name="android:textColorSecondary">@color/textSecondaryLight</item>

